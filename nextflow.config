process {
    cache = true
    executor = 'pbs'
    queue = 'batch'
    stageInMode = 'symlink'
    stageOutMode = 'rsync'
}
process.$runSTAR_process.container = 'containers/phelelani-rnaSeqCount-master-star.simg'
process.$runHTSeqCount_process.container = 'containers/phelelani-rnaSeqCount-master-htseqcount.simg'
process.$runFeatureCounts_process.container = 'containers/phelelani-rnaSeqCount-master-featurecounts.simg'
singularity {
    enabled = true
    cacheDir = 'containers'
    runOptions = '--bind /global:/global --bind /spaces:/spaces'
    autoMounts = true
}
trace {
    enabled = true
    file = 'reports/rnaSeqCount_trace.txt'
}
timeline {
    enabled = true
    file = 'reports/rnaSeqCount_timeline.html'
}
report {
    enabled = true
    file = 'reports/rnaSeqCount_report.html'
}
dag {
    enabled = true
    file = 'reports/rnaSeqCount.dot'
}
