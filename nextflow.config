// All processes use the following resources
process {
    cache = true
    executor = 'pbs'
    queue = 'batch'
    stageInMode = 'symlink'
    stageOutMode = 'rsync'
}

// Specify each process Singularity container
process.container = 'file://containers/phelelani-hons_project-master.img'

// Singularity settings
singularity {
    enabled = true
    cacheDir = 'containers'
    runOptions = '--bind /global:/global --bind /spaces:/spaces'
    autoMounts = true
}

